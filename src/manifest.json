{
  "name": "Ironman",
  "icons": {
		"16": "icon-16.png",
		"64": "icon-64.png",
		"128": "icon-128.png"
  },
  "manifest_version": 2,
  "permissions": [
		"storage",
		"https://www.facebook.com/*",
    "https://www.reddit.com/*"
  ],
	"content_scripts": [
		{
			"matches": [
				"https://www.facebook.com/*",
				"https://www.reddit.com/*"
			],
			"js": ["intercept.bundle.js"],
			"css": ["eradicate.css"],
			"run_at": "document_start"
		},
		{
			"matches": [
				"https://www.facebook.com/*"
			],
			"js": ["eradicate.bundle.js"],
			"css": ["eradicate.css"],
			"run_at": "document_idle"
		}
	]
}
