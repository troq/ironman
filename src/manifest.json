{
	"name": "Marathon",
	"version": "0.0.1",
	"description": "Chrome extension that's built for long-term productivity",
	"manifest_version": 2,
	"permissions": [
		"storage",
		"http://www.facebook.com/*",
		"https://www.facebook.com/*",
		"http://web.facebook.com/*",
		"https://web.facebook.com/*",
    "http://www.reddit.com/*",
    "https://www.reddit.com/*"
	],
	"icons": {
		"16": "icon-16.png",
		"64": "icon-64.png",
		"128": "icon-128.png"
	},
	"content_scripts": [
		{
			"matches": [
				"http://www.facebook.com/*",
				"https://www.facebook.com/*",
				"http://web.facebook.com/*",
				"https://web.facebook.com/*",
				"http://www.reddit.com/*",
				"https://www.reddit.com/*"
			],
			"js": ["intercept.js"],
			"css": ["eradicate.css"],
			"run_at": "document_start"
		},
		{
			"matches": [
				"http://www.facebook.com/*",
				"https://www.facebook.com/*",
				"http://web.facebook.com/*",
				"https://web.facebook.com/*"
			],
			"js": ["eradicate.js"],
			"css": ["eradicate.css"],
			"run_at": "document_idle"
		},
		{
			"matches": [
				"http://www.reddit.com/*",
				"https://www.reddit.com/*"
			],
			"js": ["eradicateReddit.js"],
			"css": ["eradicate.css"],
			"run_at": "document_idle"
		}
	],
  "browser_action": {
    "default_title": "Marathon",
    "default_popup": "popup.html"
  }
}
